<script language="javascript">
	var kt=false
	alert('Ê ! Ta có một số câu hỏi muốn hỏi ngươi ^^ !')
	alert('Trả lời cho chính xác nghen chưa ! ')
	alert('Câu hỏi cũng nhẹ nhàng thôi: ')
	alert('Đó là ...')
function move()
{
	var x = Math.random()*500
	var y = Math.random()*500
	var left=x+'px'
	var top=y+'px'
	document.getElementById('lbNo').style.left=left
	document.getElementById('lbNo').style.top=top
}
function dongy()
{
	if(kt==false)
	{
		alert('Hử! Ngu à!')
		alert('Hỏi thế thôi, thật ra ta biết mi ngu từ lâu rồi ')
		alert('Ngu từ cái thời cha sinh mẹ đẻ, đần độn, cù lần...')
		alert('Ngu tới mức trâu bò còn chê')
		alert('Ngu tới mức đê mê chẳng tỉnh')
		alert('Ngu dai, ngu lâu, ngu bướng bỉnh...')
		alert('Thật tình ta cũng thấy tội cho mi ^^')
		alert('Đứa nào xem xong cái nì rồi chắc tức ói máu ^^~')
		alert('Sr nhé! Đừng quên send cho bạn của mi')
		kt=true	
	}	
	else
	{
		alert('Tạm biệt đồ ngu dốt.^^')
	}
}
</script>
